@model ProductModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form asp-action="Update" asp-controller="Home" method="post">
        <input type="hidden" asp-for="@Model.Id">
        <label>Ürün Adi</label>
        <input asp-for="@Model.Name"><br>
        <label>Ürün Fiyati</label>
        <input asp-for="@Model.Price"><br>
        <label>Ürün Stogu</label>
        <input asp-for="@Model.Stock"><br>
        <button type="submit">Güncelle</button>

    </form>
    <div>
        <a asp-action="Index" asp-controller="Home">Geri Dön</a>
    </div>
</body>

</html>